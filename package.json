{
  "name": "pug-monorepo",
  "private": true,
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "node scripts/delete-expo-ts && node scripts/postinstall",
    "prebuild": "bolt ws run build",
    "prebuild:all": "bolt ws run build",
    "build": "node scripts/build-all --only-changed",
    "build:all": "node scripts/build-all",
    "prerelease": "yarn build:all",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "release": "bolt publish",
    "pretest": "yarn build && yarn tslint",
    "test": "jest",
    "posttest": "bolt ws run test",
    "watch:jest": "jest --watch",
    "clean": "rimraf packages/*/.last_build && rimraf packages/*/.cache && rimraf packages/*/build && rimraf packages/*/node_modules && rimraf node_modules",
    "tslint": "tslint './packages/*/src/**/*.{ts,tsx}' -t verbose -p ."
  },
  "jest": {
    "testEnvironment": "node",
    "snapshotSerializers": [
      "./scripts/filename-serializer.js",
      "./scripts/prettier-javascript-serializer.js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*pug.*).*$"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.test\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "acorn": "^6.1.0",
    "character-parser": "^3.1.0",
    "clean-css": "^4.2.1",
    "constantinople": "^3.1.2",
    "doctypes": "^1.1.0",
    "get-repo": "^1.0.0",
    "is-expression": "^3.0.0",
    "js-stringify": "^1.0.2",
    "jstransformer": "^1.0.0",
    "jstransformer-cdata": "^1.0.0",
    "jstransformer-coffee-script": "^1.1.1",
    "jstransformer-less": "^2.3.0",
    "jstransformer-markdown-it": "^2.1.0",
    "jstransformer-stylus": "^1.5.0",
    "jstransformer-uglify-js": "^1.2.0",
    "jstransformer-verbatim": "^1.1.1",
    "line-json": "^2.0.0",
    "lsr": "^2.0.0",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.1.1",
    "resolve": "^1.10.0",
    "rimraf": "^2.6.3",
    "token-stream": "^1.0.0",
    "uglify-js": "^3.4.9",
    "void-elements": "^3.1.0",
    "with": "^6.0.0"
  }
}
